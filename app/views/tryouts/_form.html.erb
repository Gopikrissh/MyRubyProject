<%= form_for(@tryout) do |f| %>
    <% if @tryout.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@tryout.errors.count, "error") %> prohibited this tryout from being saved:</h2>

          <ul>
            <% @tryout.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="row">
      <div class="col-md-12">
        <div class="field">
          <%= f.label :date %><br>
          <%= f.datetime_select :date, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label :fee %><br>
          <%= f.text_field :fee, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :address1 %><br>
          <%= f.text_field :address1, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :address2 %><br>
          <%= f.text_field :address2, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div></div>
        <div class="field">
          <%= f.label :city %><br>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :state %><br>
          <%= f.select(:state,
                       ['AL', 'AK', 'AZ', 'AR', 'CA', 'CO', 'CT', 'DE', 'FL', 'GA', 'HI', 'ID', 'IL',
                        'IN', 'IA', 'KS', 'KY', 'LA', 'ME', 'MD', 'MA', 'MI', 'MN', 'MS', 'MO', 'MT', 'NE',
                        'NV', 'NH', 'NJ', 'NM', 'NY', 'NC', 'ND', 'OH', 'OK', 'OR', 'PA', 'RI', 'SC', 'SD', 'TN', 'TX',
                        'UT', 'VT', 'VA', 'WA', 'WV', 'WI', 'WY'], {}, {:class => 'form-control'}) %>
        </div>
        <div class="field">
          <%= f.label :zip %><br>
          <%= f.number_field :zip, class: 'form-control' %>
        </div>
      </div>
    </div>
    <hr>
    <div class="actions">
      <%= f.submit "Submit", class: 'btn btn-primary pull-right' %>
    </div>
<% end %>
